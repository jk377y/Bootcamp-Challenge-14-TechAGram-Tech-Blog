<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <title>Document</title>
    <link rel='stylesheet' href='./css/style.css' /><link
      rel='preconnect'
      href='https://fonts.googleapis.com'
    />
  </head>
  <body class='body'>

    <header class='header'>
      <h1 class='title'><span class='span'>tech<span
            class='spanA'
          >A</span>gram</span></h1>
      <nav class='nav'>
        {{! <H2 id='home' class='buttons'><a href='/'>Home</a></H2> }}
        <a href='/'><button id='home' class='buttons'>Home</button></a>
        {{#if loggedIn}}
          <a href='/'><button id='logout' class='buttons'>Logout</button></a>
          {{! <button id='logout' class='buttons'>Logout</button> }}
          <a href='/dashboard'><button
              id='dashboard'
              class='buttons'
            >Dashboard</button></a>
          {{! <h2 id='dashboard' class='buttons'><a href='/dashboard'>Dashboard</a></h2> }}
        {{else}}
          <a href='/login'><button id='' class='buttons'>Login</button></a>
          {{! <h2 id='login' class='buttons'><a href='/login'>Login</a></h2> }}
        {{/if}}
      </nav>

    </header>

    <main>
      {{#if loggedIn}}
        <h3 id='greet' class='greet'>Hello {{user.user_id}}</h3>
      {{/if}}

      {{{body}}}
    </main>
    {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>
</html>